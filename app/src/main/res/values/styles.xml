<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>
    <!-- Actionbar Theme -->
    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/ActionBar_bg</item>
        <!-- Support library compatibility -->
        <item name="background">@color/ActionBar_bg</item>
        <!-- Customize your theme title here. -->
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="ActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ActionBar_title</item>
        <item name="android:fontFamily">sans|serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">25dp</item>
    </style>
    <style name="CardTitle">
        <item name="android:textColor">@color/Activity_main_card_title</item>
        <item name="android:fontFamily">sans|serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name ="CardTime">
        <item name="android:textColor">@color/Activity_main_card_time</item>
        <item name="android:fontFamily">sans|serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10dp</item>
    </style>
    <style name="editTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/EditText_color</item>
        <item name="colorControlActivated">@color/EditText_color_focus</item>
        <item name="colorControlHighlight">@color/EditText_color_focus</item>
    </style>
    <style name="Content">
        <item name="android:textColor">@color/Content</item>
        <item name="android:fontFamily">sans|serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15dp</item>
    </style>

</resources>
